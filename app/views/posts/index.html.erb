<div class='user_element'>
<div class='user_img'><img src=<%=@user.image%> alt="User image" width="150" height="150"></div>
<div class='user_name'><h2><%= @user.name %></h2><p>Number of posts: <%= @user.posts_counter %></p></div>
</div>

<div>
<% @posts.each do |post| %>
  <div class='post_container'>
  <div class='post_element'>
   <h3><%= post.title %></h3>
   <p><%= post.text%></p>
   <span>Comments: <%= post.comments_counter%>, Likes: <%= post.likes_counter%></span>
   </div>
   <div class='comment_element'>
   <% post.comments.each do |comment| %>
    <p><strong><%= User.find(comment.author_id).name%>:</strong> <%= comment.text%></p>
    <% end %>
   </div>
   </div>
<% end %>
</div>

<div class='button_all'><a>Paginations</a></div>