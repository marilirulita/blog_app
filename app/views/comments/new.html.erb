<h1>Add a new Comment</h1>

<%= form_with model: [@current_user, @current_user.comments.build] do |form| %>
<div>
  <%= form.label :text, "My Comment Text" %><br>
  <%= form.text_area :text, size: "70x5" %>
</div>

  <%= form.hidden_field :author_id, value: @current_user.id %>
  <%= form.hidden_field :post_id, value: 2 %>
  <%= form.submit "Create Post" %>
<% end %>
